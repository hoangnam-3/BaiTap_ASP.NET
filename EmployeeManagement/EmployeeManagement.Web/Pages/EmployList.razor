@page "/"
@inherits EmployeeListBase

<div class="card-deck">
    @foreach (var employee in employees)
    {
        <div class="card m-3" style="min-width: 18rem; max-width: 30%">
            <div class="card-header">
                <h2>@employee.department.departmentName</h2>
                <h3>@employee.firstName @employee.lastName</h3>
            </div>
            <img class="img-thumbnail" src="@employee.photoPath" />
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
